{% extends 'base.html.twig' %}

{% block title %}Sport index{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="mb-4 ">Sport index</h1>

        <table class="table table-striped table-hover">
            <thead class="thead-dark">
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for sport in sports %}
                <tr>
                    <td>{{ sport.id }}</td>
                    <td>{{ sport.name }}</td>
                    <td>
                        <a href="{{ path('app_sport_show', {'id': sport.id}) }}" class="btn btn-info btn-sm">Show</a>
                        <a href="{{ path('app_sport_edit', {'id': sport.id}) }}" class="btn btn-warning btn-sm">Edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3" class="text-center">No records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('app_sport_new') }}" class="btn btn-success mt-3">Create new</a>
    </div>
{% endblock %}
